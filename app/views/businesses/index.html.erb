<h1>Listing businesses</h1>

<% @businesses.each_slice(3) do |businesses| %>
  <div class="row">
    <% businesses.each_with_index do |business,i| %>
      <div class="business col-md-4">
        <h2><%= business.name %></h2>
        <p><img src="<%= business.image_url %>"></p>
        <p>Neighborhoods: 
          <% business.neighborhoods.each_with_index do |hood,i| %>
            <%= hood.name %><% unless i == business.neighborhoods.count - 1 %>, <% end %>
          <% end %>
        </p>
        <p>Categories: 
          <% business.categories.each_with_index do |cat,i| %>
            <%= cat.name %><% unless i == business.categories.count - 1 %>, <% end %>
          <% end %>
        </p>
        <p>Phone: <%= business.phone %></p>
        <p>URL: <a href="<%= business.url %>" target="_blank"><%= business.url %></a></p>
        <p><%= link_to 'Show', business %></p>
        <p><%= link_to 'Edit', edit_business_path(business) %></p>
        <p><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
  </div>
<% end %>

