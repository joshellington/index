<h1>Listing businesses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image url</th>
      <th>Url</th>
      <th>Mobile url</th>
      <th>Phone</th>
      <th>Display phone</th>
      <th>Review count</th>
      <th>Rating</th>
      <th>Rating img url large</th>
      <th>Snippet text</th>
      <th>Address</th>
      <th>Display address</th>
      <th>City</th>
      <th>State code</th>
      <th>Postal code</th>
      <th>Country code</th>
      <th>Cross streets</th>
      <th>Is claimed</th>
      <th>Parking types</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><img src="<%= business.image_url %>"></td>
        <td><a href="<%= business.url %>"><%= business.url %></a></td>
        <td><%= business.mobile_url %></td>
        <td><%= business.phone %></td>
        <td><%= business.display_phone %></td>
        <td><%= business.review_count %></td>
        <td><%= business.rating %></td>
        <td><img src="<%= business.rating_img_url_large %>"></td>
        <td><%= business.snippet_text %></td>
        <td><%= business.address %></td>
        <td><%= business.display_address %></td>
        <td><%= business.city %></td>
        <td><%= business.state_code %></td>
        <td><%= business.postal_code %></td>
        <td><%= business.country_code %></td>
        <td><%= business.cross_streets %></td>
        <td><%= business.is_claimed %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

